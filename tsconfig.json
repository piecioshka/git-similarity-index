{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types/"
  },
  "include": ["src"],
  "exclude": [
    "bin",
    "coverage",
    "dist",
    "node_modules",
    "src/*.spec.ts",
    "types"
  ]
}
